{
  "scripts": {
    "contract:install": "npm i @openzeppelin/contracts",
    "contract:compile": "solc contracts/ScatterToken.sol --overwrite --bin --abi -o build --base-path '/' --include-path 'node_modules/'",
    "contract:generate": "abigen --bin=./build/ScatterToken.bin --abi=./build/ScatterToken.abi --pkg=scattertoken --out=token/ScatterToken.go",
    "contract:push": "go run scripts/deploy_contract.go",
    "deploy": "npm run contract:install && npm run contract:compile && npm run contract:generate && npm run contract:push",
    "format": "prettier --write \"**/*.{sol,}\"",
    "bootstrap": "go run main.go --type bootstrap",
    "peer": "go run main.go --type peer",
    "peer:requestor": "go run main.go --type peer --peerType requestor --extAddress :5002",
    "peer:requestor:2": "go run main.go --type peer --peerType requestor --extAddress :5003",
    "peer:trainer": "go run main.go --type peer --peerType trainer --extAddress :6001",
    "celestial": "go run main.go --type celestial",
    "network": "concurrently \"npm run peer:requestor\" \"npm run peer:trainer\" \"npm run celestial\" \"npm run peer:requestor:2\"",
    "debug": "go run main.go --utils debug",
    "keygen": "go run main.go --utils keygen"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.1",
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0"
  }
}
